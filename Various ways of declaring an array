
public class Main
{
	public static void main(String[] args) 
	{
	    //Ways to declare an array:
	    
	    
	    //Way 1 (after accepting array length from the user):
	    int n=5;
	    int ar[] = new int[n];
	    
	    
	    //Way 2 (when you want to enter the elements yourself):
	    
	    String[] cars1;
	    String cars[] = {"Volvo", "Opel", "BMW"};
	    
	    //Way 3 (For multi-dimensional arrays):
	    
	    int dd[][] = new int[4][5];
	 }
}
